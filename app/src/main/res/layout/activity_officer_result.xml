<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/colorAppPrimary">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/bg_top_internas"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <mx.citydevs.hackcdmx.views.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EDGAR CARLOS"
        android:gravity="center"
        android:padding="15dp"
        android:textColor="@color/colorTextBackground"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorAppGrey"/>

    <mx.citydevs.hackcdmx.views.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Placa: 830625"
        android:gravity="center"
        android:padding="15dp"
        android:textColor="@color/colorTextBackground"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorAppGrey"/>

    <mx.citydevs.hackcdmx.views.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Si te puede infraccionar"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="@color/colorText"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@color/colorAppYellow"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/selector_btn_rect"
        android:padding="15dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/placa"
            android:layout_gravity="center_vertical"/>

        <mx.citydevs.hackcdmx.views.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Evaluar\nProceso"
            android:gravity="center"
            android:padding="10dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/colorTextBackground"
            android:textSize="30sp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"/>
        </LinearLayout>
</LinearLayout>