<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <include
        android:id="@+id/actionbar"
        layout="@layout/actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <mx.citydevs.hackcdmx.views.CustomTextView
        android:id="@+id/officer_result_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:gravity="left"
        android:padding="15dp"
        android:textColor="@color/colorBlack"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:textSize="@dimen/abc_text_size_title_material"
        android:background="@color/colorWhite"
        app:typeface="Tw_Cen_MT"/>

    <mx.citydevs.hackcdmx.views.CustomTextView
        android:id="@+id/officer_result_placa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Placa: "
        android:gravity="left"
        android:padding="15dp"
        android:textSize="@dimen/abc_text_size_title_material"
        android:textColor="@color/colorAppGrey"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorWhite"
        app:typeface="Tw_Cen_MT"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorAppYellow"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:orientation="vertical">

    <mx.citydevs.hackcdmx.views.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5"
        android:text="@string/officers_ok"
        android:gravity="center"
        android:padding="5dp"
        android:textSize="@dimen/abc_text_size_title_material"
        android:textColor="@color/colorText"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:paddingBottom="10dp"
        android:background="@color/colorWhite"
        app:typeface="Tw_Cen_MT"/>

    <ImageView
        android:id="@+id/officer_result_evaluate"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:layout_weight=".5"
        android:orientation="horizontal"
        android:scaleType="fitXY"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/menu3" />
    </LinearLayout>
</LinearLayout>