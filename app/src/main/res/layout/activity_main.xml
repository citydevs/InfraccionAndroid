<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/actionbar"/>

    <mx.citydevs.hackcdmx.views.CustomTextView
        android:id="@+id/main_description"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/main_btn_officers"
        android:layout_below="@+id/actionbar"
        android:gravity="center_horizontal"
        android:paddingTop="20dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/title_name"
        app:typeface="OpenSans_Regular"/>

    <mx.citydevs.hackcdmx.views.CustomTextView
        style="@style/TextAppearance.AppCompat.Button"
        android:id="@+id/main_btn_officers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:gravity="center"
        android:background="@drawable/selector_btn"
        android:textColor="@drawable/selector_text"
        android:layout_above="@+id/main_btn_infractions"
        android:text="@string/officers"/>

    <mx.citydevs.hackcdmx.views.CustomTextView
        style="@style/TextAppearance.AppCompat.Button"
        android:id="@+id/main_btn_infractions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:gravity="center"
        android:textColor="@drawable/selector_text"
        android:background="@drawable/selector_btn"
        android:layout_alignParentBottom="true"
        android:text="@string/infractions"/>

</RelativeLayout>
